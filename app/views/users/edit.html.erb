<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <% if @user.errors.any? %>
         <div id="error_explanation">
         <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
         <ul>
           <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
         </ul>
         </div>
        <% end %>

        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
           <div class="field">
            <%= f.text_field :name, class: "form-control", autofocus: true, id:"inputName" %>
           </div>
        </div>

        <div class="form-group">
         <label for="inputImage">Image</label>
          <div class="field">
           <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
          </div>
        </div>

        <div class="form-group">
         <label for="inputIntroduction">Introduction</label>
          <div class="field">
           <%= f.text_area :introduction, class: "form-control", autofocus: true, id:"inputIntroduction" %>
          </div>
        </div>

        <div class="form-group">
         <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>

        <% end %>
      </div>
    </div>
 </div>