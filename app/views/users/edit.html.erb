<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "Name"%>
        <label for="inputImage">ProfileImage</label>
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
        <label for="inputIntroduction">Introdcution</label>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder: "Introdcution" %>
        <%= f.submit "Update User" %>
        <% end %>
      </div>
    </div>
 </div>