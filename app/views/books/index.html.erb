<div class="container">

 <% if @book.errors.any? %>
  <div id="error_explanation">
   <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>

 <div class="row">
  <div class="col-md-3">

  <%= render 'books/userinfo', user: @user %>

ã€€<h2 class="mt-3">New book</h2>

  <%= form_with model: @book do |f| %>
   <div class="form-group">
    <label>Title</label>
     <div class="field">
     <%= f.text_field :title %>
     </div>
   </div>

   <div>
    <label>Opinion</label>
    <div class="field">
      <%= f.text_area :body %>
    </div>
   </div>

    <div class="form-group">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
   <% end %>
  </div>


  <div class="col-md-8 offset-md-1">
  <h2>Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @books.each do |f| %>
     <tr>
      <td>
       <%= link_to book_path(f.id) do %>
        <%= image_tag f.user.get_profile_image(80,80) %>
       <% end %>
      </td>
      <td>
       <%= link_to book_path(f.id) do %>
        <%= f.title %>
       <% end %>
      </td>
      <td><%= f.body %></td>
     </tr>
    <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>